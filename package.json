{
  "name": "avp-tool",
  "version": "0.1.0",
  "description": "Audio-Visual Package (AVP) Tool - Create and play interactive narrated lessons",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace=@avp/creator run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jsdom": "^21.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
